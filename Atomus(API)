--Verification()

local HasBeenVerificate
local function ErrorI(Dir)
    print("Dir has been not find:"..Dir)
end

for i,v in pairs(game:GetDescendants()) do
if v:IsA("Folder") then
    if v:GetAttribute("FileIs") and v:GetAttribute("Core") and v:GetAttribute("Core1") and v:GetAttribute("Core2") and v:GetAttribute("Resources") and v:GetAttribute("API") then
        if v:GetProperty() == "AtomusFolder" then
            local CoreDir = v:GetProperty("Core"):gsub("/",".")
            local Core1Dir = v:GetProperty("Core1"):gsub("/",".")
            local Core2Dir = v:GetProperty("Core2"):gsub("/",".")
            local ResourcesDir = v:GetProperty("Resources"):gsub("/",".")
            local APIDir = v:GetProperty("Core"):gsub("/",".")

            if v:FindFirstChild(CoreDir) then
            else return ErrorI(CoreDir)
            end
            if v:FindFirstChild(Core1Dir) then
            else return ErrorI(Core1Dir)
            end  
            if v:FindFirstChild(Core2Dir) then
            else return ErrorI(Core2Dir)
            end  
            if v:FindFirstChild(ResourcesDir) then
            else return ErrorI(ResourcesDir)
            end
            if v:FindFirstChild(APIDir) then
            else return ErrorI(APIDir)
            end  
        end
    end
end
end


